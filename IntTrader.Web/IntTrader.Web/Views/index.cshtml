<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <script src="~/content/js/jquery-2.1.3.min.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#button").click(function () {
                $.ajax({
                    url: "/bitfinex/ticker/btcusd",
                    success: function (result) {
                        $("#price").html(result.LastPrice);
                    }
                });
            });
        });
    </script>

    <title>IntTrader.Web</title>
    <style type="text/css">
        body
        {
            text-align: center;
        }
    </style>

</head>
<body>
    <p>Bitfinex</p>
    <div id="price"></div>
    <br />
    <button id="button">Update</button>
</body>
</html>
